{
	"name": "config_RunExports",
	"properties": {
		"activities": [
			{
				"name": "ForEach export scope",
				"type": "ForEach",
				"dependsOn": [],
				"userProperties": [],
				"typeProperties": {
					"items": {
						"value": "@pipeline().parameters.exportScopes",
						"type": "Expression"
					},
					"isSequential": true,
					"activities": [
						{
							"name": "If scheduled",
							"type": "IfCondition",
							"dependsOn": [],
							"userProperties": [],
							"typeProperties": {
								"expression": {
									"value": "@and(equals(toLower(item().properties.schedule.recurrence), toLower(pipeline().parameters.Recurrence)),startswith(toLower(item().name), toLower(variables('hubName'))))",
									"type": "Expression"
								},
								"ifTrueActivities": [
									{
										"name": "Trigger export",
										"type": "WebActivity",
										"dependsOn": [],
										"policy": {
											"timeout": "0.00:05:00",
											"retry": 0,
											"retryIntervalInSeconds": 30,
											"secureOutput": false,
											"secureInput": false
										},
										"userProperties": [],
										"typeProperties": {
											"method": "POST",
											"headers": {
												"x-ms-command-name": "FinOpsToolkit.Hubs.config_RunExports@0.5",
												"ClientType": "FinOpsToolkit.Hubs@0.5"
											},
											"url": {
												"value": "@{replace(toLower(concat(variables('resourceManagementUri'),item().id)), 'com//', 'com/')}/run?api-version=2023-07-01-preview",
												"type": "Expression"
											},
											"authentication": {
												"type": "MSI",
												"resource": {
													"value": "@variables('resourceManagementUri')",
													"type": "Expression"
												}
											}
										}
									}
								]
							}
						}
					]
				}
			}
		],
		"concurrency": 1,
		"parameters": {
			"ExportScopes": {
				"type": "array"
			},
			"Recurrence": {
				"type": "string",
				"defaultValue": "Daily"
			}
		},
		"variables": {
			"resourceManagementUri": {
				"type": "String",
				"defaultValue": "https://management.azure.com/"
			},
			"hubName": {
				"type": "String",
				"defaultValue": "finops-hub"
			}
		},
		"annotations": [],
		"lastPublishTime": "2024-09-09T13:53:17Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}